# ============================================
# NEXUS-GRAPH ENVIRONMENT CONFIGURATION
# ============================================

# Application
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================
# LLM CONFIGURATION
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini (for embeddings and vision)
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# VECTOR DATABASE (Pinecone)
# ============================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=nexus-graph
PINECONE_DIMENSION=1536

# ============================================
# GRAPH DATABASE (Neo4j)
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ============================================
# RELATIONAL DATABASE (PostgreSQL/Supabase)
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_graph

# Supabase Configuration (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ============================================
# UNSTRUCTURED.IO
# ============================================
UNSTRUCTURED_API_KEY=your-unstructured-api-key
UNSTRUCTURED_API_URL=https://api.unstructured.io/general/v0/general

# ============================================
# REDIS (for caching and queues)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
